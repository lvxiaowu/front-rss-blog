root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 100
tab_width = 2

[*.css]
indent_size = 2
tab_width = 2

[*.less]
indent_size = 2
tab_width = 2

[{*.ats,*.cts,*.mts,*.ts,*.tsx}]
indent_size = 2
tab_width = 2

[{*.cjs,*.js,*.jsx}]
indent_size = 2
tab_width = 2

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2

[{*.htm,*.html,*.sht,*.shtm,*.shtml}]
indent_size = 2
tab_width = 2
